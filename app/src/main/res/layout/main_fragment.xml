<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/colorDark"
              android:orientation="vertical">
    <TextView
            android:text="ASTRO WEATHER"
            android:textSize="50sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:drawablePadding="40dp"
            app:drawableTopCompat="@drawable/ic_sun_moon"/>

    <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="60dp">


    <TableRow
            android:id="@+id/first_row"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginVertical="30dp"
            >

    <TextView
            android:text="Refresh rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_weight="1"
            android:id="@+id/textView3"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_weight="1"
                android:theme="@style/spinnerItemStyle"
                android:background="@drawable/edittext_bg"
                android:popupBackground="@drawable/edittext_bg"
                android:entries="@array/refresh_array"/>
    </TableRow>
    <TableRow
            android:id="@+id/second_row"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginVertical="30dp">

        <TextView
                android:text="Latitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textSize="18sp"
                android:id="@+id/textView4"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:layout_weight="1"
            android:background="@drawable/edittext_bg"
            android:textColor="@color/colorDay"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"
            android:ems="10"
            android:id="@+id/editTextNumberLatitude"
            android:hint="0"/>
    </TableRow>
    <TableRow
            android:id="@+id/third_row"
            android:layout_height="match_parent"
            android:layout_width="wrap_content">

    <TextView
            android:text="Longitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textSize="18sp"
            android:id="@+id/textView5"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:background="@drawable/edittext_bg"
            android:textColor="@color/colorDay"
            android:textSize="18sp"
            android:paddingHorizontal="10dp"
            android:ems="10"
            android:id="@+id/editTextNumberLongitude"
            android:hint="0"/>
    </TableRow>

        <TableRow
                android:id="@+id/fourth_row"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_marginVertical="50dp">

            <Button
                    android:text="SET"
                    android:layout_width="0dp"
                    android:background="@drawable/edittext_bg"
                    android:textColor="@color/colorDay"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/button"/>
        </TableRow>
    </TableLayout>

</LinearLayout>
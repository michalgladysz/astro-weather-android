<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorDay</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="spinnerItemStyleTablet" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorDay</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorDay"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="SUN"
                android:textSize="60sp"
                android:fontFamily="@font/rubik"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:drawableLeftCompat="@drawable/ic_sun_50"
                android:drawablePadding="20dp"
                android:layout_marginVertical="10dp"/>
    </RelativeLayout>
    <TextClock
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/colorBackground"
            android:format12Hour="hh:mm:ss a"
            android:fontFamily="@font/rubik"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:paddingBottom="20dp"/>
    <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">

        <TableRow
                android:id="@+id/first_row"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="10dp">

            <TextView
                    android:text="Sunrise time"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:fontFamily="@font/rubik_medium"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0" />
            <TextView
                    android:id="@+id/sunrise_time"
                    android:text="08:10:20"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:fontFamily="@font/rubik"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

        </TableRow>

        <TableRow
                android:id="@+id/second_row"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="10dp">

            <TextView
                    android:text="Sunrise azimuth"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0" />
            <TextView
                    android:id="@+id/sunrise_azimuth"
                    android:text="08:10:20"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

        </TableRow>

        <TableRow
                android:id="@+id/third_row"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="10dp">

            <TextView
                    android:text="Sunset time"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0" />
            <TextView
                    android:id="@+id/sunset_time"
                    android:text="08:10:20"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

        </TableRow>

        <TableRow
                android:id="@+id/fourth_row"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="10dp">

            <TextView
                    android:text="Sunset azimuth"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0" />
            <TextView
                    android:id="@+id/sunset_azimuth"
                    android:text="08:10:20"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

        </TableRow>

        <TableRow
                android:id="@+id/fifth_row"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="10dp">

            <TextView
                    android:text="Dusk"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_height="wrap_content"
                    android:layout_column="0" />
            <TextView
                    android:id="@+id/dusk_time"
                    android:text="08:10:20"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

        </TableRow>

        <TableRow
                android:id="@+id/sixth_row"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="10dp">

            <TextView
                    android:text="Twilight"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"/>
            <TextView
                    android:id="@+id/twilight_time"
                    android:text="08:10:20"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:fontFamily="@font/rubik"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

        </TableRow>
        <TableRow
                android:id="@+id/longlat"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="20dp">

            <TextView
                    android:text="Latitude"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0" />
            <TextView
                    android:id="@+id/latitudeTv"
                    android:text="51.232523"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

        </TableRow>

        <TableRow
                android:id="@+id/longlatvalues"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingTop="10dp">

            <TextView
                    android:text="Longitude"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0" />
            <TextView
                    android:id="@+id/longitudeTv"
                    android:text="8.042355"
                    android:textSize="20sp"
                    android:textColor="@color/colorBackground"
                    android:textAlignment="center"
                    android:fontFamily="@font/rubik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1" />

        </TableRow>
    </TableLayout>

</LinearLayout>